<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="financial_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <tr>
                    <td><t t-esc="doc.name"/></td>
                    <td><t t-esc="doc.payment_date"/></td>
                    <td><t t-esc="doc.amount"/></td>
                </tr>
            </t>
        </t>
    </template>
</odoo>
