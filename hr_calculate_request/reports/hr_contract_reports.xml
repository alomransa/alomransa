<odoo>
    <!-- تقرير نهاية الخدمة -->
    <report
        id="action_hr_contract_end_of_service_report"
        model="hr.contract"
        string="End of Service Report"
        report_type="qweb-pdf"
        name="eos_cs.report_hr_contract_end_of_service"
        file="eos_cs.report_hr_contract_end_of_service"
        attachment_use="False"
    />

    <template id="report_hr_contract_end_of_service">
        <t t-call="web.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="0"/>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2>End of Service Report</h2>
                        <p><strong>Employee Name:</strong> <span t-field="doc.employee_id.name"/></p>
                        <p><strong>Start Date:</strong> <span t-field="doc.date_start"/></p>
                        <p><strong>End Date:</strong> <span t-field="doc.date_end"/></p>
                        <p><strong>Work Years:</strong> <span t-field="doc.work_years"/></p>
                        <p><strong>Basic Salary:</strong> <span t-field="doc.basic_salary"/></p>
                        <p><strong>End of Service Amount:</strong> <span t-field="doc.indemnity_amount"/></p>
                        <p><strong>Vacation Liquidation Amount:</strong> <span t-field="doc.vacation_liquidation_amount"/></p>
                    </div>
                </t>
            </t>
        </template>
    </odoo>
