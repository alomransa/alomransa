<odoo>
    <template id="report_contract">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Contract Report</h2>
                    <p>Employee: <t t-esc="doc.employee_id.name"/></p>
                    <p>Start Date: <t t-esc="doc.start_date"/></p>
                    <p>End Date: <t t-esc="doc.end_date"/></p>
                    <p>Basic Salary: <t t-esc="doc.basic_salary"/></p>
                    <p>Indemnity Amount: <t t-esc="doc.indemnity_amount"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>
