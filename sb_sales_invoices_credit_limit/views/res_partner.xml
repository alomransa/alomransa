<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_product_pricelist']" position="after">
                    <field name="sales_credit_limit" widget="monetary"/>
                </xpath>
            </field>
        </record>
        <record id="view_partner_form" model="ir.ui.view">
    <field name="name">res.partner.form.inherit</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='sales_credit_limit']" position="attributes">
            <attribute name="groups">module_name.group_edit_credit_limit</attribute>
        </xpath>
    </field>
</record>
<record id="group_edit_credit_limit" model="res.groups">
    <field name="name">Edit Credit Limit</field>
    <field name="category_id" ref="base.module_category_sales"/>
</record>

    <record id="access_res_partner_edit_credit_limit" model="ir.model.access">
        <field name="name">res.partner access for credit limit</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="group_id" ref="module_name.group_edit_credit_limit"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    </data>
</odoo>
