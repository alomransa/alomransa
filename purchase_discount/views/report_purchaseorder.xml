<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_purchaseorder_document"
              inherit_id="purchase.report_purchaseorder_document">

        <xpath expr="//table/thead/tr/th[@name='th_taxes']" position="replace">
        </xpath>
        <xpath expr="//table/tbody//tr//td[3]" position="replace">
        </xpath>
        <xpath expr="//table[1]/thead/tr//th[last()]" position="before">
            <th class="text-right">
                <strong>Disc. (%)</strong>
            </th>

            <th name="th_taxes"><strong>Taxes</strong></th>
        </xpath>
        <xpath expr="//td[span[@t-field='line.price_subtotal']]" position="before">
            <td class="text-right">
                <span t-field="line.discount"/>
            </td>

            <td>
                <t t-set="tax_amount" t-value="line.price_total - line.price_subtotal"/>
                <span t-esc="tax_amount"/>
            </td>
        </xpath>
    </template>
</odoo>
