<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- تعريف الإجراء الجماعي -->
    <record id="action_reset_to_draft_multi" model="ir.actions.server">
        <field name="name">Reset to Draft</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">multi</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="code">
            action = env['account.move'].browse(context.get('active_ids')).action_reset_to_draft()
        </field>
    </record>

    <!-- إضافة الإجراء في قائمة الفواتير -->
    <record id="action_reset_to_draft_server" model="ir.actions.server">
        <field name="name">Reset to Draft</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="state">multi</field>
        <field name="binding_view_types">list</field>
        <field name="binding_type">action</field>
        <field name="code">env['account.move'].browse(context.get('active_ids')).action_reset_to_draft()</field>
    </record>

    <!-- زر في قائمة الفواتير -->
    <record id="view_account_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <header>
                <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'posted')]}"/>
            </header>
        </field>
    </record>
</odoo>
