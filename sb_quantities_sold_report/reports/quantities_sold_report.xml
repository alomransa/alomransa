<odoo>
    <data>
        <template id="quantities_sold_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" dir="rtl" style="">
                        <h5>الكميات المباعه</h5>
                        <div class="row mt-4 mb-4">
                            <div class="col-auto col-3 mw-100 mb-2">
                                <p class="m-0">
                                    <strong>
                                        من تاريخ:
                                        <span t-esc="form['date_start']"/>
                                    </strong>
                                </p>
                                <p class="m-0">
                                    <strong>
                                        الي تاريخ:
                                        <span t-esc="form['date_end']"/>
                                    </strong>
                                </p>
                                <p class="m-0">
                                    <strong>
                                        طبع بواسطة :
                                        <span t-esc="form['printed_by']"/>
                                    </strong>
                                </p>
                                <p class="m-0">
                                    <strong>
                                        تاريخ الطباعة :
                                        <span t-esc="form['print_date']"/>
                                    </strong>
                                </p>
                            </div>
                        </div>
                        <br/>
                       <table class="table table-sm table-bordered" style="width: 100%; table-layout: fixed;">
                            <tbody>
                                <t t-foreach="branches" t-as="branch">
                                    <tr style="border-left:none;border-top:none;border-right:none; background-color:#CCC7BF;">
                                        <td colspan="6" class="text-right"
                                            style="border-left:none;border-top:none;border-right:none;background-color:#CCC7BF;">
                                            <strong>
                                                <span t-esc="branch['branch_name']"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-center" style="width: 22%;">الرقم المرجعى</th>
                                    <th class="text-center" style="width: 10%;">المنتج</th>
<!--                                    <th class="text-center" style="width: 22%;"></th>-->
                                    <th class="text-center" style="width: 22%;" colspan="2">الكميه المباعه</th>
                                    <th class="text-center" style="width: 22%;">كل الكميه المباعه</th>
                                    <th class="text-center" style="width: 22%;">الكميه المتاحه</th>
                                    </tr>


                                    <t t-foreach="data" t-as="line">
                                        <tr t-if="line['branch_name'] == branch['branch_name']">
                                            <td class="text-center">
                                            <span t-esc="line['product_ref']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['product_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['product_uom_name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="round(line['product_qty'], 4)"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="round(line['product_qty_all'], 4)"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="round(line['product_on_hand_qty'], 4)"/>
                                        </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <!--   QWeb Reports   -->
        <!--   NAME & FILE_NAME should be the same   -->
        <record id="quantities_sold_report" model="ir.actions.report">
            <field name="name">تقرير الكميات المباعه</field>
            <field name="model">quantities.sold.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sb_quantities_sold_report.quantities_sold_template</field>
            <field name="report_file">sb_quantities_sold_report.quantities_sold_template</field>
            <field name="binding_model_id" ref="model_quantities_sold_wizard"/>
            <field name="binding_type">report</field>
        </record>
        <record id="paperformattttt_actionى_salee_orderr_id" model="report.paperformat">
            <field name="name">الكميات المباعه</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">24.5</field>
            <field name="margin_left">1</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(6,0,[ref('sb_quantities_sold_report.quantities_sold_report')])]"/>
        </record>
    </data>
</odoo>