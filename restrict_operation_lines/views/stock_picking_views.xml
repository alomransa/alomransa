<odoo>
    <record id="view_picking_form_restrict" model="ir.ui.view">
        <field name="name">stock.picking.form.restrict</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- تحديث الشرط باستخدام user_has_groups -->
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [("user_has_groups('restrict_operation_lines.group_restrict_add_operation_lines')", '=', False)]
                }</attribute>
            </xpath>
        </field>
    </record>
</odoo>
