<odoo>
    <record id="view_eos_report_form" model="ir.ui.view">
        <field name="name">eos.report.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form string="EOS Report">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="service_years"/>
                        <field name="basic_salary"/>
                        <field name="eos_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
