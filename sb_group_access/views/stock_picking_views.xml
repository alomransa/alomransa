<odoo>
    <data>
        <record id="view_picking_form_inherit_add_line_group" model="ir.ui.view">
            <field name="name">stock.picking.form.add.line.inherit.group</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']"
                       position="after">
                    <field name="is_line_creation_allowed" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">1</attribute>
                    <attribute name="attrs">
                        {'readonly': [('is_line_creation_allowed', '=', False)]}
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
































