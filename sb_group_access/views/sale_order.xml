<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="sb_sale_group_access_button" model="ir.ui.view">
            <field name="name">sb_sale_group_access_button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">!sb_group_access.cannot_cancel_sale_orders</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="groups">!sb_group_access.cannot_confirm_sale_orders</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="groups">!sb_group_access.cannot_confirm_sale_orders</attribute>
                </xpath>
                <xpath expr="//button[@id='create_invoice']" position="attributes">
                    <attribute name="groups">!sb_group_access.cannot_creat_invoice</attribute>
                </xpath>
                <xpath expr="//button[@id='create_invoice_percentage']" position="attributes">
                    <attribute name="groups">!sb_group_access.cannot_creat_invoice</attribute>
                </xpath>

            </field>
        </record>
        <record id="view_order_form_unit_price_readonly_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.readonly</field>
            <field name="model">sale.order</field>
            <field name="priority">500</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']"
                       position="after">
                    <field name="readonly_price" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.readonly_price', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>