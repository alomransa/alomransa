<odoo>
    <record id="view_end_of_service_form" model="ir.ui.view">
        <field name="name">end.of.service.form</field>
        <field name="model">end.of.service</field>
        <field name="arch" type="xml">
            <form string="End of Service">
                <header>
                    <button name="action_open_exit_wizard" string="Employee Exit Wizard" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="contract_id"/>
                        <field name="reason_id"/>
                        <field name="service_years"/>
                        <field name="basic_salary"/>
                        <field name="total_benefits"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
